  <style>

body {
  display: grid;
  grid-template-columns: repeat(9, 1fr);
  grid-auto-rows: 75px auto 75px;
  grid-template-areas: 
  "hd hd hd hd hd hd hd hd hd"
  "mn mn mn mn mn mn mn sb sb"
  "ft ft ft ft ft ft ft ft ft";
  gap: 0.5rem;
}

nav {
    display: flex; /* 1 */
    justify-content: space-between; /* 2 */
    padding: 1rem 2rem; /* 3 */
    background-color: #333;

    }
    
    nav ul {
    display: flex; /* 5 */
    list-style: none; /* 6 */
    }
    
    nav li {
    padding: 1rem; /* 7! */
    
    }
  
    nav li a {
    text-decoration: none;
    color: #848484
    }

    nav h2 {


      font-size: 2rem;
    }

    

    nav li a:hover {
      text-decoration: underline;
      color: rgb(184, 184, 184);
    }
  

.el {
  background-color: rebeccapurple;
  color: #fff;
  display: grid;

}
.header {
  grid-area: hd;
  background-color: blueviolet;
  place-items: center;
}

.sidebar {
  grid-area: sb;
}

.footer {

  grid-area: ft;
}
.container {
  grid-area: mn;
  min-height: 400px;
  display: grid;
  grid-template-columns: repeat(2, 1fr 2fr);
  grid-auto-rows: minmax(150px, auto);
  gap: 1rem;
}  

.box {
  background-color: black;
  color: #fff;
  font-size: 2rem;
  padding: 0.5rem;
}

.box:first-child {

   background-color: blue; 
   grid-column: 1 / 4 ;
   grid-row: 1 / 3;
  
}

.box:nth-child(2) {

  background-color: purple;
  grid-column: 1 / 5;
  grid-row: 3 / 4;

}



  </style>


  

